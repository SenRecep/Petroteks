@model UI_Contact

@{
    ViewData["Title"] = "iletişim | Petroteks";
    ViewData["Description"] = "Petroteks iletişim sayfası";
    ViewData["MetaTags"] = "";
    ViewData["Keywords"] = "Petroteks, Petroteks İletişim, Petroteks telefon";
}

@if (Model != null)
{
    @Html.Raw(Model.Content)
}


@section Scripts{
    <script>
        $('#gonder').click(function () {
            var İsim = $("#İsim").val();
            var Email = $("#Email").val();
            var Konu = $("#Konu").val();
            var Mesaj = $("#Mesaj").val();
            var model = {
                İsim: İsim,
                Email: Email,
                Konu: Konu,
                Mesaj: Mesaj
            };


            $.ajax({
                url: "/Home/Contact",
                type: "POST",
                data: { model: model },
                success: function (response) {
                    toastr.success(response);
                },
                failure: function (response) {
                    toastr.error(response);
                },
                error: function (response) {
                    toastr.error(response);
                }
            });
        });
    </script>
}